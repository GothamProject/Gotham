<project name="Gotham" default="dist" basedir=".">
	<description>
		Gotham project ant build file - https://github.com/GothamProject/Gotham
	</description>
  <property name="src" location="src"/>
  <property name="build" location="bin"/>

  <target name="init">
	<mkdir dir="${build}"/>

	<!--<rmic base="${build}/classes" includes="**/Prefix*.class"/>
		
	</rmic>-->
  </target>

  <target name="compile" depends="init"
		description="compile the source " >
	<javac srcdir="${src}" destdir="${build}" includeantruntime="false">
		<classpath>
			<pathelement location="lib/"/>
			<pathelement location="lib/log4j-1.2.15.jar"/>
			<pathelement location="lib/junit-4.9b2.jar"/>
		</classpath>
	</javac>
  </target>

  <target name="dist" depends="compile"
		description="generate the jar executable file" >

	<!-- Put everything in ${build} into the Gotham.jar file -->
	<jar jarfile="Gotham.jar" basedir="${build}"/>
  </target>

  <target name="clean"
		description="clean up" >
	<delete dir="${build}"/>
	<delete file="Gotham.jar"/>
  </target>
</project>
